<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Registro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Registro.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="#e8e8e8"
    Shell.FlyoutWidth="250"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Title="Registro">

    <Shell.FlyoutHeader>
        <StackLayout
            BackgroundColor="red"
            Padding="10">
            
        </StackLayout>
    </Shell.FlyoutHeader>
    <FlyoutItem Title="Home">

        <ShellContent ContentTemplate="{DataTemplate local:Pantalla_Principal}"/>
        
    </FlyoutItem>

</Shell>
